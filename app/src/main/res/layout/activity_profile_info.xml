<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile_info"
    android:background="#333131">

    <View
        android:layout_width="300dp"
        android:layout_height="600dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/rectangle"
        android:elevation="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:elevation="10dp"
        android:fontFamily="sans-serif-light"
        android:text="User Info"
        android:textColor="#FFFFFF"
        android:textSize="40dp" />

    <ImageView
     android:layout_height="135dp"
     android:layout_width="135dp"
     android:layout_marginLeft="120dip"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="110dip"
     android:src="@drawable/dp"
     android:id="@+id/round_img_profile"
     android:elevation="10dp"/>
    <EditText
        android:id="@+id/person_name"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="135dip"
        android:layout_marginTop="290dip"
        android:background="@drawable/edittext"
        android:drawableStart="@drawable/person_name"
        android:elevation="10dp"
        android:inputType="text"
        android:hint="Name of Bussines"/>
    <EditText
        android:id="@+id/mobile"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="135dip"
        android:layout_marginTop="350dip"
        android:background="@drawable/edittext"
        android:drawableStart="@drawable/mobile_num"
        android:elevation="10dp"
        android:inputType="number"
        android:hint="Mobile number"/>
    <EditText
        android:id="@+id/email"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="135dip"
        android:layout_marginTop="410dip"
        android:background="@drawable/edittext"
        android:drawableStart="@drawable/email_id"
        android:elevation="10dp"
        android:hint="Email"
        android:inputType="textEmailAddress"/>
    <TextView android:layout_height="50dp"
        android:layout_width="wrap_content"
        android:id="@+id/text"
        android:text="Tap to select"
        android:textSize="25dp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="210dip"
        android:elevation="20dp"
        android:visibility="visible"
        android:layout_marginLeft="130dip"/>

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="490dip"
        android:background="@drawable/button"
        android:elevation="20dip"
        android:text="Save" />



</RelativeLayout>