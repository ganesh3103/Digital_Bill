<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <ProgressBar
        android:id="@+id/prg3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
       />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="460dp"
        android:background="#181717" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="660dp"
        android:background="#F0F8FF" />

    <ImageView
        android:id="@+id/round_img"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_marginLeft="235dip"
        android:layout_marginTop="10dip"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:text="Bussines name"
        android:textColor="#F0F8FF"
        android:textStyle="bold"
        android:id="@+id/set_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="45dp"
        android:text="mobile "
        android:textColor="#F0F8FF"
        android:id="@+id/set_mobile"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/set_email"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="62dp"
        android:text="email "
        android:textColor="#F0F8FF" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/button2"
        android:drawableTop="@drawable/ic_receipt_black_24dp"
        android:drawablePadding="-19dip"
        android:elevation="10dp"
        android:paddingTop="30dp"
        android:text="Create Bill" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="41dp"
        android:background="@drawable/button2"
        android:drawableTop="@drawable/ic_view_list_black_24dp"
        android:drawablePadding="-19dip"
        android:elevation="10dp"
        android:paddingTop="30dp"
        android:text="Sales list" />





</RelativeLayout>