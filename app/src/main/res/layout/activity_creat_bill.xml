<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333131"
    tools:context=".Creat_bill">

    <EditText
        android:id="@+id/cus_name"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/edittext"
        android:hint="Customer name"
        android:inputType="text" />

    <EditText
        android:id="@+id/items_total"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:background="@drawable/edittext"
        android:hint="number of items"
        android:inputType="number" />

    <EditText
        android:id="@+id/Total"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="380dp"
        android:background="@drawable/edittext"
        android:hint="Total"
        android:inputType="number" />

    <EditText
        android:id="@+id/unit_name"

        android:layout_width="280dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:background="@drawable/edittext"
        android:hint="name of items" />

    <Button
        android:id="@+id/bill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="470dp"
        android:background="@drawable/button"
        android:text="genrate bill" />

    <ImageButton
        android:id="@+id/cals"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="300dip"
        android:layout_marginTop="550dip"
        android:elevation="20dp"
        android:src="@drawable/cal" />


</RelativeLayout>